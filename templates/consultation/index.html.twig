{% extends "baseback.html.twig" %}

{% block title %}Consultation index{% endblock %}

{% block content %}

    <h1>Consultation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lien_visio</th>
                <th>Prix</th>
                <th>Lien_enregistrement</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for consultation in consultations %}
            <tr>
                <td>{{ consultation.id }}</td>
                <td>{{ consultation.lienVisio }}</td>
                <td>{{ consultation.prix }}</td>
                <td>{{ consultation.lienEnregistrement }}</td>
                <td>
                    <a href="{{ path('app_consultation_show', {'id': consultation.id}) }}">show</a>
                    <a href="{{ path('app_consultation_edit', {'id': consultation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_consultation_new') }}" style="color:blue">Create new</a>

{% endblock %}
